{
  "compilerOptions": {
    "target": "ES2020",                     // modern JS output
    "module": "ESNext",                     // use ES modules (import/export)
    "moduleResolution": "Node",             // resolve Node-style imports
    "outDir": "./dist",                     // compiled JS output folder
    "rootDir": "./src",                     // source files location
    "esModuleInterop": true,                // allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true,                         // enable all strict type-checking
    "skipLibCheck": true                    // skip type checks of .d.ts files
  },
  "include": ["src"],                       // compile everything inside src
  "exclude": ["node_modules", "dist"]       // ignore build & deps
}
